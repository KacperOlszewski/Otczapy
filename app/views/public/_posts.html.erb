
<% unless @post.blank? %>
<% a = 1 %>
<section id="nowosci">
    <div class="container">
            <div class="row row_1">
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                    <h2>Tutaj będą nasze aktualności</h2>
                    <h4>Świeże info, wydarzenia, i inne ciekawe sprawy którym by się należało pochwalić</h4>
                </div>
            </div>
            <div class="row">
                <div class="panel-group" id="menu_harmonijkowe">
                    <% @post.each do |posts| %>  
                        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 panel nowosci_panel">
    
                            <div class="panel-heading">
                                
                                <a href=<%="##{a}post"%> data-toggle="collapse" data-parent="#menu_harmonijkowe">
                                    <% if a % 2 == 0 %>
        						        <%= image_tag(posts.img.url, :class => "img_right") %>
        						    <% else %>
        						        <%= image_tag(posts.img.url, :class => "img_left") %>
                                    <% end %>
                                        <div class= <% if a % 2 == 0 %> "head_content_right"<% else %>"head_content_left"<% end %> >
          
                                            <h2><%= posts.name %></h2>
                                            <h3><%= posts.teaser %></h3>
                                                <hr>
                                            <h3>Czytaj więcej!</h3>
                                        </div>
                                    <div class="clear"></div>
                                </a>
                            </div>
                                
                                <div id=<%="#{a}post"%> class="panel-collapse collapse">
                                    <div class="panel-body">
                                        <%= raw(posts.text) %>
                                    </div>
                                </div>
                                
                             
                        </div>
                        
                    <% a+=1 %>
                    <% end %>


                </div>
            </div>
    </div>
<div class="pagination">
    <%= will_paginate @post,  :container => false, previous_label:h("poprzednia"), next_label:h("nastepna") %>	
 </div> 

</section>
<% end %>    
 
 
    
