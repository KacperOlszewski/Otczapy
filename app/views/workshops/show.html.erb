<div class="hero-unit">

<h1>Pokaż workshopsa</h1>

<table class="table table-striped table-bordered">

	<tr>
		<th>Nazwa</th>
		<td><%= @workshops.name %></td>
	</tr>
	<tr>
		<th>Pozycja</th>
		<td><%= @workshops.position %></td>
	</tr>
	<tr>
		<th>Miejsce</th>
		<td><%= @workshops.place %></td>
	</tr>
	<tr>
		<th>Data</th>
		<td><%= @workshops.date %></td>
	</tr>
	<tr>
		<th>Opis</th>
		<td><%= raw(@workshops.text) %></td>
	</tr>
	
	<% if !@workshops.img.blank? %>
		<tr>
			<th>Zdjęcie</th>
			<td><%= image_tag(@workshops.img, :class => "img-responsive") %></td>
		</tr>
	<% end %>	
	<tr>
		
		<th>Plik:</th>
			<% if !@workshops.file.blank? %> 
		        <td><%= link_to "Download", @workshops.file.url(:original) %></td>
			<% else %>
		        <td>brak</td>
			<% end %>
	</tr>


</table>

<%= link_to("Powrót", {:action => 'index'}, {:class => "btn btn-mini btn-primary"})%>


</div>
